#include <iostream>
using namespace std;

int main()
{ int a,b,r,opcion;
    cout<<"Ingrese primer numero: ";cin>>a;
    cout<<"Ingrese primer numero: ";cin>>a;
    cout<<"1. para suma"<<endl;
    cout<<"2. para resta"<<endl;
    cout<<"3. para multiplicacion"<<endl;
    cout<<"4. para division"<<endl;
    cout<<"Elige una opcion"<<endl;cin>>opcion;
    switch(opcion){
        case 1:r=a+b;break;
        case 2:r=a-b;break;
        case 3:r=a*b;break;
        case 4:r=a/b;break;
        default: cout<<"Opcion invalida"<<endl;
    }
    cout<<"El resultado es: "<<r<<endl;

    return 0;
}
