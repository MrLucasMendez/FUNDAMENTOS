#include <iostream>

using namespace std;

int main()
{
  int a,b,r,opcion;
  cout<<"Ingresar a:  ";cin>>a;
  cout<<"Ingresar b:  ";cin>>b;
 do{ 
  cout<<" --------Menu-------"<<endl;
  cout<<" 1. Suma   "         <<endl;
  cout<<" 2. Resta  "         <<endl;
  cout<<" 3. Multiplicacion  "<<endl;
  cout<<" 4. Divicion  "      <<endl;
  cout<<" 0. Salir  "      <<endl;
  cout<<"--------------------"<<endl;
  cout<<" Opcion: ";cin>>opcion;
  switch(opcion)
 { case 1:r=a+b;break;
   case 2:r=a-b;break;
   case 3:r=a*b;break;
   case 4:r=a/b;break;
   case 0:cout<<"salir"<<endl;break;
   default: cout<<"Opcion invalida "<<endl;
 }
 if ((opcion>=1)&&(opcion<=4))
 cout<<" El resultado es:  "<<r<<endl;
 cout<<endl;
  system ("clear");
 }while (opcion != 0);

    return 0;
}
